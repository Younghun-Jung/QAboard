    <h2 class="top-buffer">답변 수정하기</h2>
    </hr>
    
    <div class="text-center">
		<form action="/answer/update" method="post">
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
			<input type="hidden" name="id" value="<%=@answer.id%>"></input>
    	    <input type="hidden" name="ask_id" value="<%=@ask_id%>"></input>
			<div class="form">
				<div class="form-group row">
					<label class="col-xs-2" for="author">작성자</label>
					<input class="col-xs-4" type="text" id="author" name="author" value="<%=@answer.author%>">	
				</div>
				<div class="form-group row">
					<label class="col-xs-2" for="password">비밀번호</label>
					<input class="col-xs-4" type="password" id="password" name="password">	
				</div>
				<div class="form-group row">
					<label class="col-xs-2" for="content">내용</label>
					<textarea class="col-xs-10" name="content" rows=10><%=@answer.content%></textarea></br>	
				</div>
				<button class="btn btn-outline-danger form-bottom-btn" type="submit">수정</button>	
			</div>
		</form>	
	</div>
</div>
