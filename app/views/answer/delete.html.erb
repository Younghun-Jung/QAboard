<div class="container">
    <h1 class="top-buffer">답변삭제하기</h1>
    </hr></br>
    
    <div class="text-center">
		<form action="/answer/delete" method="post">
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
			<input type="hidden" name="id" value="<%=@answer.id%>"></input>
			<input type="hidden" name="ask_id" value="<%=@ask_id%>"></input>
			<div class="form">
				<div class="form-group row">
					<label class="row" for="password">비밀번호</label></br>
					<input class="row" type="password" id="password" name="password">
					<div class="row" style="margin-top:10px;">
				        <button class="btn btn-outline-danger" type="submit">삭제</button>	    
					</div>
					
				</div>
				
			</div>
		</form>	
	</div>
</div>